<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">
    <link rel="icon" type="image/x-icon" href="/static/img/playpoint_ico.png">
    <link rel="stylesheet" href="/static/css/admin_css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/static/css/admin_css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/static/css/admin_css/style.css">
    <link rel="shortcut icon" href="/static/css/admin_css/favicon.png" />
    @RenderSection("Css", false)
    <title>PlayPoint Admin Panel</title>
</head>
<body>

    @if (TempData["message"] != null)
    {
        <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
    }

    <div class="container-scroller">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" target="_blank" asp-controller="Home" asp-action="Index"><img src="/images/playpoint-name-white.png" alt="logo" /></a>
                <a class="sidebar-brand brand-logo-mini" target="_blank" asp-controller="Home" asp-action="Index"><img src="/images/playpoint.png" alt="logo" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@User.Identity.Name</h5>
                                <span>Admin || Moderator</span>
                            </div>
                        </div>
                    </div>
                </li>  @* Admin User *@
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-controller="Admin" asp-action="Home">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>  @* Dashboard *@
                <li class="nav-item menu-items">
                    <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                        <span class="menu-icon">
                            <i class="mdi mdi-laptop"></i>
                        </span>
                        <span class="menu-title">Data</span>
                        <i class="menu-arrow"></i>
                    </a>
                    <div class="collapse" id="ui-basic">
                        <ul class="nav flex-column sub-menu">
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="XboxdataList">Xbox Məlumatı</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="XboxgameList">Xbox Oyunları</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="ProductList">Oyun Cədvəli</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="ProductOfGamerList">Oyunçu Məhsulları(POG)</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="ActivationCountryList">Aktivasiya Ölkəsi</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="CameraPerspectiveList">Kamera Perspektivi</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="CurrencyList">Valyutalar</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="DeveloperList">Devoleper Siyahısı</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="DiviceList">Cihazlar</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="GameCategoryList">Oyun Kateqoriyası</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="GameNameList">Oyun Adları(POG)</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="JanraList">Janrlar</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="LanguageList">Dillər</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="PlatformList">Platformlar</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="PublisherList">Nəşriyyatçılar</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="PurchasedProductList">Oyun Alım Siyahısı</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="PurchasedPOGList">Oyunçu satın alım cədvəli</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="GameItemList">Oyun Item-ları</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="LanguageTextList">Haqqında- tərcümələr siyahısı</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="InstructionPanelList">Təlimat paneli(Index-Add)</a></li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Admin" asp-action="IndexSliderList">İndeks Kaydırıcısı(Xbox sağı)</a></li>
                        </ul>
                    </div>
                </li>  @* Data *@
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-controller="Admin" asp-action="UserList">
                        <span class="menu-icon">
                            <i class="mdi mdi-playlist-play"></i>
                        </span>
                        <span class="menu-title">Users</span>
                    </a>
                </li>  @* Users *@
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-controller="Admin" asp-action="RoleList">
                        <span class="menu-icon">
                            <i class="mdi mdi-table-large"></i>
                        </span>
                        <span class="menu-title">Roles</span>
                    </a>
                </li>  @* Roles *@
                <li class="nav-item menu-items">
                    <a class="nav-link" href="/adminpanel/pphlist">
                        <span class="menu-icon">
                            <i class="mdi mdi-chart-bar"></i>
                        </span>
                        <span class="menu-title">Payment Pro. History</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="/adminpanel/ppoghlist">
                        <span class="menu-icon">
                            <i class="mdi mdi-contacts"></i>
                        </span>
                        <span class="menu-title">Payment POG History</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid page-body-wrapper">
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="/adminpanel/index"><img src="/images/playpoint.png" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>



    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>*@
    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="/static/js/admin_js/vendor.bundle.base.js"></script>
    <script src="/static/js/admin_js/off-canvas.js"></script>
    <script src="/static/js/admin_js/hoverable-collapse.js"></script>
    <script src="/static/js/admin_js/misc.js"></script>
    <script src="/static/js/admin_js/settings.js"></script>
    <script src="/static/js/admin_js/todolist.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>