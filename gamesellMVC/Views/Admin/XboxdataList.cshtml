@model XboxdataListViewModel

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Xbox Data Table</h4>
                <p class="card-description">
                    <a asp-controller="Admin" asp-action="XboxdataCreate" class="btn btn-outline-primary btn-fw">Create</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width:60px;"> ID </th>
                                <th> Title </th>
                                <th> Login </th>
                                <th> Password </th>
                                <th> Price </th>
                                <th> String Price </th>
                                <th style="width:200px;"> Image 1 </th>
                                <th style="width:200px;"> Image 2 </th>
                                <th style="width:200px;"> Image 3 </th>
                                <th style="width:200px;"> Image 4 </th>
                                <th style="width:200px;"> Image 5 </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.XDs.Count() > 0)
                            {
                                @foreach (var ac in Model.XDs)
                                {
                                    <tr>
                                        <td>@ac.Id</td>
                                        <td>@ac.Title</td>
                                        <td>@ac.Login</td>
                                        <td>@ac.Password</td>
                                        <td>@ac.Price</td>
                                        <td>@ac.SPrice</td>
                                        <td><img src="/static/img/xboxdata/@ac.Img1" alt="Xəta baş verdi" width="150" /></td>
                                        <td><img src="/static/img/xboxdata/@ac.Img2" alt="Xəta baş verdi" width="150" /></td>
                                        <td><img src="/static/img/xboxdata/@ac.Img3" alt="Xəta baş verdi" width="150" /></td>
                                        <td><img src="/static/img/xboxdata/@ac.Img4" alt="Xəta baş verdi" width="150" /></td>
                                        <td><img src="/static/img/xboxdata/@ac.Img5" alt="Xəta baş verdi" width="150" /></td>
                                        <td>
                                            <a href="/adminpanel/xboxdataedit/@ac.Id" class="btn btn-outline-info btn-fw">Edit</a>
                                            <form asp-controller="Admin" asp-action="DeleteXD" method="post" style="display:inline;">
                                                <input type="hidden" name="Id" value="@ac.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-fw">Delete</button>
                                            </form>
                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-outline-info btn-fw">Nothing is here</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
