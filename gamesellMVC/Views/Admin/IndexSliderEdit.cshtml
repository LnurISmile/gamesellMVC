@model IndexSliderModel

@{
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Instruction Panel(Add) Edit</h4>
            <form class="form-sample" asp-controller="Admin" asp-action="IndexSliderEdit" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="IndexSliderName" class="col-sm-3 col-form-label">Index Slider Name</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="IndexSliderName" value="@Model.IndexSliderName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="IsApproved" class="col-sm-3 col-form-label">IsApproved</label>
                            <div class="col-sm-9">
                                <select asp-for="IsApproved" class="form-control">
                                    <option value="true">True</option>
                                    <option value="false">False</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Text" class="col-sm-3 col-form-label">Text</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Text" value="@Model.Text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="UrlTitle" class="col-sm-3 col-form-label">Url Title</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="UrlTitle" value="@Model.UrlTitle" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Url" class="col-sm-3 col-form-label">Url</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Url" value="@Model.Url" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Img">Image</label>
                            <input type="hidden" asp-for="Img" />
                            <img src="/static/img/indexslider/@Model.Img" width="150" alt="Xəta baş verdi" />
                            <input type="file" name="file" class="form-control" />
                            <span asp-validation-for="Img" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>