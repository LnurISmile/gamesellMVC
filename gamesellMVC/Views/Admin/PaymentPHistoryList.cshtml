@model PaymentPHistoryListViewModel

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Payment Product History Table</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width:60px;"> ID </th>
                                <th> User </th>
                                <th> Product </th>
                                <th> Payment Amount </th>
                                <th> Date </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PPHs.Count() > 0)
                            {
                                @foreach (var ac in Model.PPHs)
                                {
                                    <tr>
                                        <td>@ac.Id</td>
                                        @foreach (var q in Model.Users)
                                        {
                                            if (q.Id == ac.UserId)
                                            {
                                                <td>@q.UserName @q.FirstName @q.LastName</td>
                                            }
                                        }
                                        @foreach (var q in Model.Pros)
                                        {
                                            if (q.Id == ac.ProductId)
                                            {
                                                <td>@q.Name</td>
                                            }
                                        }
                                        <td>@ac.PaymentBalance</td>
                                        <td>@ac.BuyDate</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-outline-info btn-fw">Nothing is here</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>