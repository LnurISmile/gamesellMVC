@model ProductListViewModel

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <p class="card-description">
                    <a asp-controller="Admin" asp-action="ProductDeletedList" class="btn btn-outline-secondary btn-fw">Recycle</a>
                    <a asp-controller="Admin" asp-action="ProductCreate" class="btn btn-outline-primary btn-fw">Create</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th style="width:60px;"> ID </th>
                                <th style="width:200px;"> Image </th>
                                <th> Name </th>
                                <th> Login </th>
                                <th> Password </th>
                                <th> Key </th>
                                <th> Content </th>
                                <th> Price </th>
                                <th> Company </th>
                                <th> Activation </th>
                                <th> Online </th>
                                <th> Signleplayer </th>
                                <th> Multiplayer </th>
                                <th> Co_Op </th>
                                <th> Type_active </th>
                                <th> 2D </th>
                                <th> 3D </th>
                                <th> VR </th>
                                <th> Slider_videolink </th>
                                <th> Discount_percent </th>
                                <th> Instock </th>
                                <th> Stocksize </th>
                                <th> Sale </th>
                                <th> UpComing </th>
                                <th> ReleaseDate </th>
                                <th> IsApproved </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Pros.Count() > 0)
                            {
                                @foreach (var ac in Model.Pros)
                                {
                                    <tr>
                                        <td>
                                            <a href="/adminpanel/productedit/@ac.Id" class="btn btn-outline-info btn-fw">Edit</a>

                                            <form asp-controller="Admin" asp-action="UnApprovedPro" method="post" style="display:inline;">
                                                <input type="hidden" name="Id" value="@ac.Id" />
                                                <button type="submit" class="btn btn-outline-warning btn-fw">UnApproved</button>
                                            </form>
                                        </td>
                                        <td>@ac.Id</td>
                                        <td><img src="/static/img/product/@ac.Main_img" alt="Xəta baş verdi" width="150" /></td>
                                        <td>@ac.Name</td>
                                        <td>@ac.Login</td>
                                        <td>@ac.Password</td>
                                        <td>@ac.Key</td>
                                        <td>@ac.Contenttype</td>
                                        <td>@ac.Price</td>
                                        <td>@ac.Company_name</td>
                                        <td>@ac.Activation_zone</td>
                                        <td>@ac.Onlineornot</td>
                                        <td>@ac.Signleplayer</td>
                                        <td>@ac.Multiplayer</td>
                                        <td>@ac.Co_op</td>
                                        <td>@ac.Type_active</td>
                                        <td>@ac.twoD</td>
                                        <td>@ac.threeD</td>
                                        <td>@ac.VR</td>
                                        <td>@ac.Slider_videolink</td>
                                        <td>@ac.Discount_percent</td>
                                        <td>@ac.Instock</td>
                                        <td>@ac.Stocksize</td>
                                        <td>@ac.Number_of_sale</td>
                                        <td>@ac.UpComing</td>
                                        <td>@ac.ReleaseDate</td>
                                        <td>@ac.IsApproved</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-outline-info btn-fw">Nothing is here</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
